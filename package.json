{
  "name": "@illandril/foundryvtt-turn-marker",
  "version": "1.0.0",
  "description": "Illandril's Turn Marker: Adds an image over tokens when they are the active combatant in the combat tracker.",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild:run": "npm run clean",
    "build": "npm run build:run -- --environment BUILD:production",
    "build:watch": "npm run build:dev -- --watch",
    "build:dev": "npm run build:run -- --environment BUILD:development",
    "build:run": "rollup --config rollup.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "preversion": "npm run validate",
    "validate": "run-s type-check lint test:coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/illandril/FoundryVTT-turn-marker.git"
  },
  "keywords": [
    "FoundryVTT"
  ],
  "author": "Joe Spandrusyszyn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/illandril/FoundryVTT-turn-marker/issues"
  },
  "homepage": "https://github.com/illandril/FoundryVTT-turn-marker#readme",
  "dependencies": {
    "@illandril/foundryvtt-utils": "^9.0.4"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.22.5",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@illandril/eslint-config-foundryvtt": "^1.8.7",
    "@illandril/foundryvtt-types": "^6.2.5",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@types/chance": "^1.1.3",
    "@types/jest": "^29.5.3",
    "babel-jest": "^29.6.2",
    "babel-preset-minify": "^0.5.2",
    "chance": "^1.1.11",
    "cross-env": "^7.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-fail-on-console": "^3.1.1",
    "jquery": "^3.7.0",
    "npm-run-all2": "^6.0.6",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-scss": "^4.0.0",
    "sass": "^1.65.1",
    "typescript": "^5.1.6"
  }
}
